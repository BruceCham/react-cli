{
  "presets": [
    ["env", {
      "targets": {
        "browsers": ["last 2 versions", "safari >= 7"]
      },
      "modules": false
    }],
    // Transpile React components to JavaScript
    "react"
  ],
  "plugins": [
    "transform-runtime",
    // es7 装饰器
    "transform-decorators-legacy",
    // Enables React code to work with HMR.
    "react-hot-loader/babel",
    [
      "import",
      {
        "libraryName": "antd",
        // antd组件的样式文件最好单独引入，不要打包到js中
        "style": false
      }
    ]
  ],
  "comments": false,
  "env": {
    "test": {
      "presets": [
        "env"
      ],
      "plugins": [
        "istanbul"
      ]
    },
    "production": {
      "presets": [
        "react-optimize"
      ]
    }
  }
}
