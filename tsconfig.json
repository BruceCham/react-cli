{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2015",
    "module": "commonjs", 
    // "outDir": "./lib", // 输出到指定目录
    "strict": true, // 输出严格模式
    "noImplicitThis": false, //this: any 不报错 
    // "declaration": true, // 生成相应的d.ts文件
    "removeComments": true, // 删除所有注释 
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true, // 禁止null undefined赋值给其他类(number.)
    "lib": [
      "dom",
      "es7"
    ],
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
}
