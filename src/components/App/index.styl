body a{
  font: 12px/1.4 "Lucida Grande", Arial, sans-serif;
  background: #000;
  padding: 3px 5px;
  color: #ccc;
  pointer: cursor;
}
a:hover{
  color: #fff;
}

form input{
  padding: 5px;
  border: 1px solid;
  border-radius: 5px;
}

.app-p-box{
  width: 100%;
  padding: 20px;
  margin: 0 auto;
  background-image: linear-gradient(to bottom, #b1f43d, #75de6a 23%, #31b195);
  background-size: 100%;
} 
